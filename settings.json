{
  "vim_mode": true,

  // NOTE: font
  "cursor_blink": false,
  "relative_line_numbers": true,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 15,
  "buffer_font_size": 12,

  "format_on_save": "off",

  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 3,
      "min_column": 0,
      "max_severity": null
    },
    "cargo": null
  },

  "project_panel": {
    "dock": "right",
    "indent_size": 14,
    "entry_spacing": "standard",
    "default_width": 250
  },

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },

  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "tab_bar": {
    "show": true,
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false
  },

  "tabs": {
    "file_icons": true,
    "show_diagnostics": "all",
    "git_status": true
  },

  "theme": {
    "mode": "system",
    "light": "Kanso Pearl",
    "dark": "Ros√© Pine"
  },
  "icon_theme": "JetBrains Icons Dark"
}
