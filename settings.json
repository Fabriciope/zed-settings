{
  "cursor_blink": false,
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 15,
  "buffer_font_size": 12,
  "format_on_save": "on",
  "project_panel": {
    "dock": "right",
    "indent_size": 14,
    "entry_spacing": "standard",
    "default_width": 250
  },

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },

  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "theme": {
    "mode": "system",
    "light": "Kanso Pearl (Blurred)",
    "dark": "Kanso Zen (Blurred)"
  },
  "icon_theme": "JetBrains Icons Dark"
}
